ls --color -d . &>/dev/null 2>&1 && alias ls="ls --color=tty" || alias ls="ls -G"
alias lsa='ls -lah'
alias la='ls -a'
alias ll='ls -l'
alias lh='ls -a | egrep "^\."'

alias rm='rm -i'

alias myip="ifconfig | grep 'inet ' | grep -v 127.0.0.1 | cut -d\ -f2"

alias vi="/usr/bin/vi --noplugin"
alias vim="/usr/bin/vim --noplugin"
