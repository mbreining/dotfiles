[push]
  default = tracking
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore
  pager=cat
[merge]
  conflictstyle=diff3
[format]
  #pretty = %Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s
[alias]
  a = add
  co = checkout
  ci = commit
  ca = commit --amend
  di = diff
  dic = diff --cached
  graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  l = log --pretty=\"%Cblue%h%Creset %Cgreen[%cr]%C(bold blue)<%an>%Creset %s\"
  pl = pull
  ps = push
  plre = pull --rebase
  r = reflog
  st = status
